<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffff"
        android:elevation="2dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Pagi"
                android:textSize="12dp"
                android:textColor="@color/ColorAccent"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:id="@+id/alarmPagi">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alarm_pagi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Waktu Makan"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:id="@+id/textPagi"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    />
                <TextView
                    android:id="@+id/statusPagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Siang"
                android:textSize="12dp"
                android:textColor="@color/ColorAccent"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:id="@+id/alarmSiang">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alarm_siang" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Waktu Makan"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:id="@+id/textSiang"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    />
                <TextView
                    android:id="@+id/statusSiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan Malam"
                android:textSize="12dp"
                android:textColor="@color/ColorAccent"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:id="@+id/alarmMalam">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alarm_malam" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Waktu Makan"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:id="@+id/textMalam"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    />
                <TextView
                    android:id="@+id/statusMalam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/ColorAccent"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>